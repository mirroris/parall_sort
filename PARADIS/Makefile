MAIN = paradis.c
OBJS = main.o zemib.o
PROGRAM = parallel
DEBUGPROG = deb
OPTION = -fopenmp -std=c99 -O2

default: zemib.o main.o
	@gcc -o $(PROGRAM) $(OPTION) zemib.o main.o
	@echo "$(PROGRAM) is generated for main"

debug: $(MAIN) zemib.c
	@gcc -g -c -o zemib.dbg zemib.c 
	@gcc -g -c -o main.dbg $(MAIN) 
	@gcc -g -o $(DEBUGPROG) $(OPTION) zemib.dbg main.dbg
	@echo "$(DEBUGPROG) is generated for dbg"

zemib.o: zemib.c
	@gcc -c $(OPTTION) -o zemib.o zemib.c

main.o: $(MAIN)
	@gcc -c $(OPTION) -o main.o $(MAIN)

clean:
	@rm -f *.o $(PROGRAM) $(DEBUG) *.dbg

help:
	@echo "default	:generate parallel(exe)"
	@echo "debug	:generate parallel.dbg(exe for gdb)"
	@echo "clean	:remove *.o and execute file generated by make"